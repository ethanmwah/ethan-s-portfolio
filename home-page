            margin: 0 auto;
        }

        .image-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 0; /* No gap between items */
            width: 100%;
        }

        .grid-item {
            position: relative;
            overflow: hidden;
            aspect-ratio: 1; /* Makes items square */
        }

        .grid-item img,
        .grid-item video {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
            border: none;
            outline: none;
        }

        /* Hover effect for better interaction */
        .grid-item:hover {
            transform: scale(1.02);
            transition: transform 0.3s ease;
            z-index: 10;
        }

        /* Responsive design */
        @media (max-width: 768px) {
            .image-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (max-width: 480px) {
            .image-grid {
                grid-template-columns: 1fr;
            }
            
            body {
                padding: 10px;
            }
        }

        /* Optional: Add a subtle shadow to the entire grid */
        .image-grid {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
        }
    </style>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .image-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 0; /* No gap between items */
            width: 100%;
        }

        .grid-item {
            position: relative;
            overflow: hidden;
            aspect-ratio: 1; /* Makes items square */
            transition: all 0.3s ease;
        }

        .grid-item img,
        .grid-item video {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
            border: none;
            outline: none;
        }

        /* Row hover effects */
        .image-grid:hover .grid-item {
            opacity: 0.3;
            transition: opacity 0.3s ease, transform 0.3s ease;
        }

        /* When hovering over a specific item, highlight its entire row */
        .grid-item:hover {
            opacity: 1 !important;
            transform: scale(1.05);
            z-index: 10;
        }

        /* Highlight the entire row when hovering over any item in that row */
        .grid-item:nth-child(3n-2):hover ~ .grid-item:nth-child(3n-1),
        .grid-item:nth-child(3n-2):hover ~ .grid-item:nth-child(3n),
        .grid-item:nth-child(3n-1):hover ~ .grid-item:nth-child(3n),
        .grid-item:nth-child(3n-1):hover + .grid-item:nth-child(3n-2),
        .grid-item:nth-child(3n):hover + .grid-item:nth-child(3n-1) + .grid-item:nth-child(3n-2),
        .grid-item:nth-child(3n):hover + .grid-item:nth-child(3n-1) {
            opacity: 1 !important;
            transform: scale(1.05);
        }

        /* More precise row targeting */
        .grid-item:nth-child(1):hover,
        .grid-item:nth-child(2):hover,
        .grid-item:nth-child(3):hover {
            opacity: 1 !important;
            transform: scale(1.05);
        }

        .grid-item:nth-child(1):hover ~ .grid-item:nth-child(2),
        .grid-item:nth-child(1):hover ~ .grid-item:nth-child(3),
        .grid-item:nth-child(2):hover ~ .grid-item:nth-child(3),
        .grid-item:nth-child(2):hover + .grid-item:nth-child(1),
        .grid-item:nth-child(3):hover + .grid-item:nth-child(2) + .grid-item:nth-child(1),
        .grid-item:nth-child(3):hover + .grid-item:nth-child(2) {
            opacity: 1 !important;
            transform: scale(1.05);
        }

        .grid-item:nth-child(4):hover,
        .grid-item:nth-child(5):hover,
        .grid-item:nth-child(6):hover {
            opacity: 1 !important;
            transform: scale(1.05);
        }

        .grid-item:nth-child(4):hover ~ .grid-item:nth-child(5),
        .grid-item:nth-child(4):hover ~ .grid-item:nth-child(6),
        .grid-item:nth-child(5):hover ~ .grid-item:nth-child(6),
        .grid-item:nth-child(5):hover + .grid-item:nth-child(4),
        .grid-item:nth-child(6):hover + .grid-item:nth-child(5) + .grid-item:nth-child(4),
        .grid-item:nth-child(6):hover + .grid-item:nth-child(5) {
            opacity: 1 !important;
            transform: scale(1.05);
        }

        .grid-item:nth-child(7):hover,
        .grid-item:nth-child(8):hover,
        .grid-item:nth-child(9):hover {
            opacity: 1 !important;
            transform: scale(1.05);
        }

        .grid-item:nth-child(7):hover ~ .grid-item:nth-child(8),
        .grid-item:nth-child(7):hover ~ .grid-item:nth-child(9),
        .grid-item:nth-child(8):hover ~ .grid-item:nth-child(9),
        .grid-item:nth-child(8):hover + .grid-item:nth-child(7),
        .grid-item:nth-child(9):hover + .grid-item:nth-child(8) + .grid-item:nth-child(7),
        .grid-item:nth-child(9):hover + .grid-item:nth-child(8) {
            opacity: 1 !important;
            transform: scale(1.05);
        }

        /* Responsive design */
        @media (max-width: 768px) {
            .image-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (max-width: 480px) {
            .image-grid {
                grid-template-columns: 1fr;
            }
            
            body {
                padding: 10px;
            }
        }

        /* Optional: Add a subtle shadow to the entire grid */
        .image-grid {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
        }
    </style>
